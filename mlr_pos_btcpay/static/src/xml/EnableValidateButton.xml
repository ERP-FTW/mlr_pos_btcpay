<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="point_of_sale.PaymentScreenValidate" t-inherit="point_of_sale.PaymentScreenValidate" t-inherit-mode="extension" owl="1">
        	<xpath expr="//button[contains(@class, 'validation') and contains(@class, 'next')]" position="replace">                
			   <button class="button next validation btn btn-primary btn-lg w-50 py-3 lh-lg	"
					   t-attf-class="{{((currentOrder.is_paid() and currentOrder._isValidEmptyOrder()) or (typeof currentOrder.get_selected_paymentline() !== 'undefined' and currentOrder.get_selected_paymentline().is_crypto_payment)) ? 'highlight' : 'disabled'}}"                  
			           t-on-click="() => this.validateOrder()"> 
					<span class="next_text">Validate</span>
			   </button>
		</xpath>
	</t>
</templates>
